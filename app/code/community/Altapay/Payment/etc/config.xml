<config>
	<modules>
		<Altapay_Payment>
			<version>1.1.2</version>
		</Altapay_Payment>
	</modules>

	<frontend>
		<layout>
			<updates>
				<altapaypayment>
					<file>altapay.xml</file>
				</altapaypayment>
			</updates>
		</layout>
		<translate>
			<modules>
				<Altapay_Payment>
					<files>
						<default>Altapay_Payment.csv</default>
					</files>
				</Altapay_Payment>
			</modules>
		</translate>

		<routers>
			<customer>
                <args>
                    <modules>
                        <altapaypayment before="Mage_Customer">Altapay_Payment</altapaypayment>
                    </modules>
                </args>
            </customer>
			<altapaypayment>
				<use>standard</use>
				<args>
					<module>Altapay_Payment</module>
					<frontName>altapaypayment</frontName>
				</args>
			</altapaypayment>
		</routers>

	</frontend>

	<global>
		<blocks>
			<altapaypayment>
				<class>Altapay_Payment_Block</class>
			</altapaypayment>
			<checkout>
				<rewrite>
					<onepage>Altapay_Payment_Block_Onepage</onepage>
				</rewrite>
			</checkout>
		</blocks>

		<helpers>
			<altapaypayment>
				<class>Altapay_Payment_Helper</class>
			</altapaypayment>
		</helpers>
		<models>
			<altapaypayment>
				<class>Altapay_Payment_Model</class>
				<resourceModel>altapaypayment_resource</resourceModel>
			</altapaypayment>
	        <altapaypayment_resource>
	            <class>Altapay_Payment_Model_Resource</class>
                <entities>
                    <subscription>
                         <table>altapay_subscriptions</table>
                    </subscription>
                    <token>
                         <table>altapay_token</table>
                    </token>
                </entities>
	        </altapaypayment_resource>	
		</models>
		<resources>
			<altapaypayment_setup>
				<setup>
					<module>Altapay_Payment</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</altapaypayment_setup>
			<altapaypayment_write>
				<connection>
					<use>core_write</use>
				</connection>
			</altapaypayment_write>
			<altapaypayment_read>
				<connection>
					<use>core_read</use>
				</connection>
			</altapaypayment_read>
		</resources>
		<events>
			<sales_order_payment_capture>
				<observers>
					<altapay_hooksystem_invoice_about_to_be_captured>
						<type>singleton</type>
						<class>altapaypayment/observer</class>
						<method>salesOrderPaymentCapture</method>
					</altapay_hooksystem_invoice_about_to_be_captured>
				</observers>
			</sales_order_payment_capture>
		</events>		
	</global>
	<admin>
		<routers>
			<altapaypayment>
				<use>admin</use>
				<args>
					<module>Altapay_Payment</module>
					<frontName>altapaypayment</frontName>
				</args>
			</altapaypayment>
		</routers>
	</admin>
	<adminhtml>
		<layout>
			<updates>
				<altapaypayment>
					<file>altapay.xml</file>
				</altapaypayment>
			</updates>
		</layout>
		<translate>
			<modules>
				<Altapay_Payment>
					<files>
						<default>Altapay_Payment.csv</default>
					</files>
				</Altapay_Payment>
			</modules>
		</translate>
	</adminhtml>
	<default>
		<altapay_general>
			<api_installation>https://testgateway.altapaysecure.com/</api_installation>
			<api_username></api_username>
			<api_password></api_password>
		</altapay_general>
		<payment>
			<altapay_moto>
				<active>0</active>
				<model>altapaypayment/method_moto</model>
				<title>Altapay MO/TO</title>
				<useccv>1</useccv>
			</altapay_moto>
			<altapay_gateway>
				<active>0</active>
				<model>altapaypayment/method_gateway</model>
				<title>Altapay Payment Gateway</title>
			</altapay_gateway>
			<altapay_token>
				<active>0</active>
				<active_customer_token_control>0</active_customer_token_control>
				<model>altapaypayment/method_token</model>
				<title>Altapay Payment Gateway with Tokenization</title>
			</altapay_token>			
			<altapay_recurring>
				<active>0</active>
				<model>altapaypayment/method_recurring</model>
				<title>Stored Credit Card</title>
			</altapay_recurring>
		</payment>
	</default>
</config>